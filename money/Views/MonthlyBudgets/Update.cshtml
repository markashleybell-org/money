@model UpdateMonthlyBudgetViewModel

@section title {
    <title>Update Monthly Budget</title>
}

<div class="row">
    <div class="col">
        <h1>Update Monthly Budget</h1>
        <h2>@Model.AccountName</h2>
        <form asp-controller="MonthlyBudgets" asp-action="Update" method="post">
            <div class="mb-2">
                <label asp-for="StartDate" class="form-label">Start budget on</label>
                <editor for="StartDate" />
            </div>
            <div class="mb-4">
                <label asp-for="EndDate" class="form-label">End budget on</label>
                <editor for="EndDate" />
            </div>
            <editor for="Categories" />
            <input type="hidden" asp-for="AccountID" />
            <button type="submit" class="mt-4 btn btn-primary btn-submit">Update</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col">
        <form asp-controller="MonthlyBudgets" asp-action="Delete" method="post" class="delete-form">
            <input type="hidden" asp-for="ID" id="Delete_ID" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
