@model AccountViewModel

@{
    Layout = null;

    var hasBudget = Model.Categories.Count() > 0;
    var isCredit = hasBudget.ToString().ToLower();
}

<div class="row">
    <div class="col d-flex align-items-center">
        <div class="flex-grow-1">
            <h2 class="account-name"><a asp-action="Index" asp-controller="Entries" asp-route-id="@Model.ID">@Model.Name</a> @Model.SpanForNumberLast4Digits()</h2>
        </div>
        <div class="account-balance">
            @Model.CurrentBalance.ToString("0.00")
        </div>
        <div>
            <button data-accountid="@Model.ID" data-accountname="@Model.Name" @Html.Raw(hasBudget ? "data-iscredit=\"true\"" : "") data-remaining="@Model.CurrentBalance" class="btn btn-primary btn-add-entry"><i class="fa fa-plus"></i></button>
        </div>
    </div>
</div>

@if (hasBudget)
{
    foreach (var category in Model.Categories)
    {
        <div class="row">
            <div class="col d-flex align-items-stretch">
                <div class="progress flex-grow-1 align-items-stretch">
                    <div class="overlay d-flex align-items-center">
                        <div class="flex-fill">@category.Name</div>
                        <div class="flex-fill">@((-category.Remaining).ToString("0.00"))</div>
                    </div>
                    <div class="progress-bar bg-@(category.Remaining <= 0 ? "success" : "danger") @(Model.UpdatedCategoryID == category.ID ? "updated" : "")" role="progressbar" aria-valuenow="@category.PercentageSpent" aria-valuemin="0" aria-valuemax="100" style="width: @(category.PercentageSpent > 100 ? 100 : category.PercentageSpent)%">
                        <span class="sr-only">@category.PercentageSpent%</span>
                    </div>
                </div>
                <button class="btn btn-primary btn-add-entry" data-accountid="@Model.ID" data-accountname="@Model.Name" data-iscredit="false" data-categoryid="@category.ID" data-categoryname="@category.Name" data-remaining="@category.Remaining"><i class="fa fa-minus"></i></button>
            </div>
        </div>
    }
}
