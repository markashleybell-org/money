@model DateTime

@{

    var par = new {
        @class = "form-control date-picker" + ((ViewData["class"] != null) ? " " + ViewData["class"] : ""),

        id = (ViewData["id"] != null) ? ViewData["id"] : Html.GenerateIdFromName(ViewData.TemplateInfo.GetFullHtmlFieldName("")),

        type = "date"
    };

}

@Html.TextBox("", Model.ToString("dd/MM/yyyy"), par)
