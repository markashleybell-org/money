@model CreateAccountViewModel

@section title {
    <title>Create Account</title>
}

<div class="row">
    <div class="col">
        <h1>Create Account</h1>
        <form asp-controller="Accounts" asp-action="Create" method="post">
            <div class="mb-2">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Type" class="form-label">Type</label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList(typeof(Money.Entities.AccountType))" class="form-select">
                    <option value="">Please select...</option>
                </select>
                <span asp-validation-for="Type"></span>
            </div>
            <div class="mb-2">
                <label asp-for="NumberLast4Digits" class="form-label">Last 4 Digits of account / card no.</label>
                <input asp-for="NumberLast4Digits" class="form-control" />
                <span asp-validation-for="NumberLast4Digits"></span>
            </div>
            <div class="mb-2">
                <label asp-for="StartingBalance" class="form-label">Current balance</label>
                <input asp-for="StartingBalance" class="form-control" />
                <span asp-validation-for="StartingBalance"></span>
            </div>
            <div class="mb-4">
                <label asp-for="DisplayOrder" class="form-label">Display order</label>
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder"></span>
            </div>
            <div class="form-check mb-4">
                <input asp-for="IncludeInNetWorth" class="form-check-input">
                <label asp-for="IncludeInNetWorth" class="form-check-label">Include balance in net worth</label>
            </div>
            <button type="submit" class="btn btn-primary btn-submit">Create</button>
        </form>
    </div>
</div>
