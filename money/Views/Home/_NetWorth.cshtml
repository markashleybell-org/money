@model NetWorthViewModel

@functions {
    string ClassForValue(decimal value)
    {
        return value != 0
            ? value < 0 ? "text-danger" : "text-success"
            : "text-muted";
    }
}

@{
    Layout = null;
}

<h1 class="account-type-heading">
    Net Worth:
    <span class="text-right net-worth-balance @ClassForValue(Model.NetWorth)">@Model.NetWorth.ToString("0.00")</span>
    <span class="text-right net-worth-total-balance @ClassForValue(Model.NetWorthTotal)">@Model.NetWorthTotal.ToString("0.00")</span>
</h1>

<hr />

<div class="well net-worth net-worth-balance-list">

    @foreach (var accountGroup in Model.Accounts.GroupBy(a => a.IsIncludedInNetWorth))
    {
        if (!accountGroup.Key)
        {
            <div class="row row-budget">
                <div class="col-sm-8">
                    <h1 class="net-worth-header">Excluded From Net Worth</h1>
                </div>
                <div class="col-sm-4 text-right">
                    <h1 class="net-worth-header">@accountGroup.Sum(a => a.CurrentBalance)</h1>
                </div>
            </div>

            foreach (var account in accountGroup)
            {
                <div class="row row-budget">
                    <div class="col-sm-8">
                        @account.Name
                    </div>
                    <div class="col-sm-4 text-right net-worth-balance @(account.CurrentBalance == 0 ? "text-muted" : account.CurrentBalance < 0 ? "text-danger" : "text-success")">
                        @account.CurrentBalance
                    </div>
                </div>
            }
        }
        else
        {
            foreach (var group in accountGroup.GroupBy(a => a.Type))
            {
                <div class="row row-budget">
                    <div class="col-sm-8">
                        <h1 class="net-worth-header">@group.Key</h1>
                    </div>
                    <div class="col-sm-4 text-right">
                        <h1 class="net-worth-header">@group.Sum(a => a.CurrentBalance)</h1>
                    </div>
                </div>

                foreach (var account in group)
                {
                    <div class="row row-budget">
                        <div class="col-sm-8">
                            @account.Name
                        </div>
                        <div class="col-sm-4 text-right net-worth-balance @(account.CurrentBalance == 0 ? "text-muted" : account.CurrentBalance < 0 ? "text-danger" : "text-success")">
                            @account.CurrentBalance
                        </div>
                    </div>
                }
            }
        }
    }

</div>