@model CreatePartyViewModel

@section title {
    <title>Create Party</title>
}

<div class="row">
    <div class="col">
        <h1>Create Party</h1>
        <form method="post">
            <div class="form-group">
                <label asp-for="AccountID">Account</label>
                <select asp-for="AccountID" asp-items="Model.Accounts" class="form-control">
                    <option value="">Please select...</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary btn-submit">Create</button>
        </form>
    </div>
</div>
