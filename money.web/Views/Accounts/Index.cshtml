@model ListAccountsViewModel

@{
    ViewBag.Title = "Accounts";
}

<div class="row">
    <div class="col-md-12">
        <h1>Accounts</h1>
        @foreach(var account in Model.Accounts)
        {
            <p>@account.Name @Html.ActionLink("Edit", "Update", new { id = account.ID }) @Html.ActionLink("Budgets", "Index", "MonthlyBudgets", new { id = account.ID }, null)</p>
        }
        @Html.ActionLink("New", "Create")
    </div>
</div>