@model UpdateAccountViewModel

@{
    ViewBag.Title = "Update Account";
}

<div class="row">
    <div class="col-md-12">
        <h1>Update Account</h1>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Type)
                @Html.EnumDropDownListFor(x => x.Type, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.StartingBalance)
                @Html.TextBoxFor(x => x.StartingBalance, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.DisplayOrder)
                @Html.TextBoxFor(x => x.DisplayOrder, new { @class = "form-control" })
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(x => x.IncludeInNetWorth) Include balance in net worth
                </label>
            </div>
            <div class="checkbox">
                <label>
                    @Html.CheckBoxFor(x => x.IsDormant) Account is dormant
                </label>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        }

        @using (Html.BeginForm("Delete", "Accounts"))
        {
            @Html.HiddenFor(x => x.ID)
            <button type="submit" class="btn btn-danger">Delete</button>
        }
    </div>
</div>