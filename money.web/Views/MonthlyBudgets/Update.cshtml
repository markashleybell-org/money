@model UpdateMonthlyBudgetViewModel

@{
    ViewBag.Title = "Update Monthly Budget";
}

<div class="row">
    <div class="col-md-12">
        <h1>Update Monthly Budget</h1>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(x => x.StartDate)
                @Html.EditorFor(x => x.StartDate)
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.EndDate)
                @Html.EditorFor(x => x.EndDate)
            </div>

            @Html.EditorFor(x => x.Categories)

            <button type="submit" class="btn btn-primary">Update</button>
        }

        @using (Html.BeginForm("Delete", "MonthlyBudgets"))
        {
            @Html.HiddenFor(x => x.ID)
            <button type="submit" class="btn btn-danger">Delete</button>
        }
    </div>
</div>