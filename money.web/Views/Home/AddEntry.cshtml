@model AddEntryViewModel

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        @Html.HiddenFor(x => x.AccountID)
        @Html.HiddenFor(x => x.MonthlyBudgetID)

        <div class="form-group">
            @Html.LabelFor(x => x.Date)
            <div class="row">
                <div class="col-xs-7">
                    @Html.EditorFor(x => x.Date)
                </div>
                <div class="col-xs-5">
                    <button class="btn btn-default btn-block btn-date-preset" data-date="@DateTime.Now.Date.AddDays(-1).ToString("yyyy-MM-dd")">Yesterday</button>
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryID)
            @Html.DropDownListFor(x => x.CategoryID, Model.Categories, "--", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.PartyID)
            @Html.DropDownListFor(x => x.PartyID, Model.Parties, "--", new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Type) / @Html.LabelFor(x => x.Amount)
            <div class="row">
                <div class="col-xs-5">
                    @Html.EnumDropDownListFor(x => x.Type, new { @class = "form-control" })
                </div>
                <div class="col-xs-7">
                    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control", type = "number" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.TransferAccountID)
            @Html.DropDownListFor(x => x.TransferAccountID, Model.Accounts, "--", new { @class = "form-control" })<br />
        </div>
    </div>
</div>
