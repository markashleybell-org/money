@model IndexViewModel

@{
    ViewBag.Title = "Home Page";
}

@foreach (var typeGroup in Model.Accounts.GroupBy(a => a.Type).OrderBy(a => a.Key))
{
    <h1 class="account-type-heading">@typeGroup.Key.GetDisplayName()</h1>

    foreach (var account in typeGroup)
    {
        <div id="account-@account.ID">
            @{ Html.RenderPartial("_Account", account); }
        </div>
    }
}

<!-- Add Entry Modal -->
<div class="modal fade" id="add-entry-modal" tabindex="-1" role="dialog" aria-labelledby="add-entry-modal-label">
    @using (Html.BeginForm("AddEntry", "Home", FormMethod.Post, new { id = "add-entry-form" }))
    {
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="add-entry-modal-label">New Entry</h4>
                </div>
                <div class="modal-body">
                    <!-- Content -->
                </div>
                <div class="modal-footer">
                    <div class="load-indicator btn-height"><img src="~/Content/ajax-loader-dark.gif" class="load-indicator-hidden" /></div>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    }
</div>