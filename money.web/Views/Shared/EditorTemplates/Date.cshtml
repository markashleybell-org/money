@model DateTime

@{

    var par = new {
        @class = "form-control date-picker" + ((ViewData["class"] != null) ? " " + ViewData["class"] : ""),
        id = (ViewData["id"] != null) ? ViewData["id"] : ViewData.TemplateInfo.GetFullHtmlFieldId(""),
        type = "date"
    };

}

@Html.TextBox("", Model.ToString("yyyy-MM-dd"), par)